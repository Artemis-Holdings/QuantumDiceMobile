<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="---"
            android:textColor="@color/colorGold"

            android:layout_width="171dp"
            android:layout_height="73dp"
            android:id="@+id/displayRoll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textModOutput" android:textAlignment="center"/>
    <Button
            android:text="@string/roll_dice"
            android:layout_width="291dp"
            android:layout_height="56dp"
            android:id="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.096"
            android:backgroundTint="@color/colorGold"
            android:textColor="@color/btnText"
    />

    <EditText
            android:textColor="@color/colorGold"

            android:layout_width="115dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numDice" android:text="9"
            android:textAlignment="center" tools:text=""
            android:contentDescription="The number of Dice you would like to roll."
            android:autofillHints="9"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:textColor="@color/colorGold"

            android:layout_width="115dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numSides"
            android:text="9" android:textAlignment="center"
            tools:text="9" android:contentDescription="The number of sides on each dice."
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textNumDice" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:textColor="@color/colorGold"

            android:layout_width="115dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numMod"
            android:text="0" android:textAlignment="center"
            tools:text="0" android:contentDescription="Modifyer: An integer used to modify the sum of random numbers."
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textNumSides" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="---"
            android:layout_width="173dp"
            android:layout_height="17dp"
            android:id="@+id/displayMod"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/textModOutput2" android:layout_marginTop="4dp"
            android:textAlignment="center"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="---"
            android:layout_width="101dp"
            android:layout_height="34dp"
            android:id="@+id/displayFinal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toBottomOf="@+id/textFinal"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:textAlignment="center"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="@string/number_of_sides"
            android:layout_width="115dp"
            android:layout_height="18dp"
            android:id="@+id/textNumSides"
            android:textAllCaps="false"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/numSides"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="@color/colorGold"
            app:layout_constrainedWidth="true"

            android:text="@string/dices_rolled"
            android:layout_width="174dp"
            android:layout_height="18dp"
            android:id="@+id/textModOutput"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/app_name"
            app:layout_constraintHorizontal_bias="0.529"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="@string/modifier"
            android:layout_width="174dp"
            android:layout_height="18dp"
            android:id="@+id/textModOutput2"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintTop_toBottomOf="@+id/displayRoll"
            android:layout_marginTop="8dp"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="@string/modifier"
            android:layout_width="115dp"
            android:layout_height="18dp"
            android:id="@+id/textModInput"
            android:textAllCaps="false"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/numMod" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="number of dice"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:id="@+id/textNumDice"
            tools:text="@string/number_of_dice" android:contentDescription="@string/number_of_dice"
            android:textAllCaps="false"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/numDice"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:textColor="@color/colorGold"

            android:text="@string/grand_total"
            android:layout_width="174dp"
            android:layout_height="16dp"
            android:id="@+id/textFinal" tools:text="Grand Total" android:textAlignment="center"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintTop_toBottomOf="@+id/displayMod"
            android:layout_marginTop="20dp"/>
    <TextView
            android:text="@string/app_name"
            style="@style/app_name"
            android:layout_width="361dp"
            android:layout_height="45dp"
            android:id="@+id/app_name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" tools:text="@string/app_name"
            android:textAlignment="center" android:fontFamily="sans-serif-light"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="204dp" android:id="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="328dp" android:id="@+id/guideline2"/>
</android.support.constraint.ConstraintLayout>