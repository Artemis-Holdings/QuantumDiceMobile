<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="---"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayRoll"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textDicesRolled"
    />
    <Button
            android:text="@string/roll_dice"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:id="@+id/button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/numMod" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <EditText
            android:layout_width="82dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numDice" android:text="9"
            android:textAlignment="center" tools:text="9"
            android:contentDescription="The number of Dice you would like to roll."
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:autofillHints=""/>
    <EditText
            android:layout_width="82dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numSides"
            android:text="9" android:textAlignment="center"
            tools:text="9" android:contentDescription="The number of sides on each dice."
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/numDice" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="82dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/numMod"
            android:text="0" android:textAlignment="center"
            tools:text="0" android:contentDescription="Modifyer: An integer used to modify the sum of random numbers."
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/numSides" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="---"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayMod"
            app:layout_constraintTop_toBottomOf="@+id/textModifier"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="---"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayFinal"
            app:layout_constraintTop_toBottomOf="@+id/textFinal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/textModifier"
            tools:text="Modifier"
            android:textAllCaps="true" android:contentDescription="Dices Rolled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/displayRoll" android:textStyle="bold"
            android:textAlignment="center" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/dices_rolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDicesRolled"
            tools:text="Dices Rolled"
            android:textAllCaps="true" android:contentDescription="Dices Rolled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button"
            android:textAlignment="center" android:textStyle="bold"/>
    <TextView
            android:text="@string/modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textMod2" app:layout_constraintEnd_toStartOf="@+id/numMod"
            android:layout_marginEnd="16dp" tools:text="Modifier:" android:textStyle="italic"
            android:textAllCaps="true" android:contentDescription="Modifier:"
            app:layout_constraintTop_toBottomOf="@+id/textNumSides" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Number of Sides: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNumSides" app:layout_constraintEnd_toStartOf="@+id/numSides"
            android:layout_marginEnd="16dp" android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/textNumDice" android:layout_marginTop="40dp"
            android:textAllCaps="true"/>
    <TextView
            android:text="Number of Dice:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNumDice" app:layout_constraintEnd_toStartOf="@+id/numDice"
            android:layout_marginEnd="16dp" tools:text="Number of Dice:" android:contentDescription="@string/number_of_dice"
            android:textStyle="italic" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="true"/>
    <TextView
            android:text="Grand Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textFinal" tools:text="Grand Total" android:textAlignment="textStart"
            android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/displayMod"
            android:layout_marginTop="16dp" android:textAllCaps="true"/>
</android.support.constraint.ConstraintLayout>